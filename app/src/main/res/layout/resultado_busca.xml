<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:weightSum="1"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"
             tools:context="com.example.mateus.mapaedes.Activities.resultadoBusca">


    <Button
        android:id="@+id/grafico"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fab2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:background="@color/colorPrimary" android:onClick="GRAFICO"
        android:text="Graphics" android:textColor="#fff"/>

    <ListView
        android:id="@+id/buscaas"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_weight="0.86">
    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/buscaas"
        android:layout_gravity="right"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="400dp" android:layout_weight="0.04"
        android:src="@mipmap/point" app:elevation="21dp"
        app:pressedTranslationZ="12dp"/>

</FrameLayout>